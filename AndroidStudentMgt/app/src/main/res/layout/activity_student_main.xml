<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delaroystudios.studentmgt.StudentMainActivity">
    <EditText
        android:id="@+id/roll_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#EFDB2F"
        android:layout_margin="@android:dimen/app_icon_size"
        android:textColor="@android:color/black"
        android:hint="Enter Roll No."
        android:inputType="number">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#C62B20"
        android:layout_margin="@android:dimen/app_icon_size"
        android:textColor="@android:color/black"
        android:hint="Enter Your Name" />

    <EditText
        android:id="@+id/marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@android:dimen/app_icon_size"
        android:background="#D86A47"
        android:ems="10"
        android:hint="Enter Marks"
        android:inputType="number"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="79dp">

        <Button
            android:id="@+id/addbtn"
            android:layout_width="155dp"
            android:layout_height="88dp"
            android:background="#FF9800"
            android:text="Add Data" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="154dp"
            android:layout_height="87dp"
            android:background="#E91E63"
            android:text="Delete Data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="89dp">

        <Button
            android:id="@+id/modifybtn"
            android:layout_width="157dp"
            android:layout_height="79dp"
            android:background="#9C27B0"
            android:text="Update Data" />

        <Button
            android:id="@+id/viewbtn"
            android:layout_width="149dp"
            android:layout_height="80dp"
            android:background="#673AB7"
            android:text="View by Roll no" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="33dp"
        android:layout_weight="0.74">

        <Button
            android:id="@+id/viewallbtn"
            android:layout_width="158dp"
            android:layout_height="81dp"
            android:background="#3F51B5"
            android:text="View all in DB" />

        <Button
            android:id="@+id/showbtn"
            android:layout_width="157dp"
            android:layout_height="82dp"
            android:background="#F44336"
            android:text="Developer Name" />

    </LinearLayout>

</LinearLayout>